@{
    ViewBag.Title = "Home Page";
}
<div ng-cloak ng-controller="projectCtrl">
    <table>
        <thead>
            <tr>
                <th><input type="text" ng-model="name" /></th>
                <th><a class="btn btn-default" ng-click="add()">Add</a></th>
            </tr>
        </thead>
        <tbody ng-repeat="row in rows">
            <tr>
                <td>{{row.name}}</td>
                <td>&nbsp;</td>
            </tr>
        </tbody>
    </table>
</div>